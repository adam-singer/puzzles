import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import RushHour
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  bool registerClient(string email, string name)'
  print '  bool canMove()'
  print '  bool takeRoad(Road road, double speed)'
  print '  RoadMap getRoadConditions()'
  print '  IntersectionsFromRoad getIntersectionsFromRoad()'
  print '  string winGame()'
  print '  double getTime()'
  print '  Intersection getCurrentIntersection()'
  print '  string getScoreBoard()'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':') 
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':') 
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = RushHour.Client(protocol)
transport.open()

if cmd == 'registerClient':
  if len(args) != 2:
    print 'registerClient requires 2 args'
    sys.exit(1)
  pp.pprint(client.registerClient(args[0],args[1],))

elif cmd == 'canMove':
  if len(args) != 0:
    print 'canMove requires 0 args'
    sys.exit(1)
  pp.pprint(client.canMove())

elif cmd == 'takeRoad':
  if len(args) != 2:
    print 'takeRoad requires 2 args'
    sys.exit(1)
  pp.pprint(client.takeRoad(eval(args[0]),eval(args[1]),))

elif cmd == 'getRoadConditions':
  if len(args) != 0:
    print 'getRoadConditions requires 0 args'
    sys.exit(1)
  pp.pprint(client.getRoadConditions())

elif cmd == 'getIntersectionsFromRoad':
  if len(args) != 0:
    print 'getIntersectionsFromRoad requires 0 args'
    sys.exit(1)
  pp.pprint(client.getIntersectionsFromRoad())

elif cmd == 'winGame':
  if len(args) != 0:
    print 'winGame requires 0 args'
    sys.exit(1)
  pp.pprint(client.winGame())

elif cmd == 'getTime':
  if len(args) != 0:
    print 'getTime requires 0 args'
    sys.exit(1)
  pp.pprint(client.getTime())

elif cmd == 'getCurrentIntersection':
  if len(args) != 0:
    print 'getCurrentIntersection requires 0 args'
    sys.exit(1)
  pp.pprint(client.getCurrentIntersection())

elif cmd == 'getScoreBoard':
  if len(args) != 0:
    print 'getScoreBoard requires 0 args'
    sys.exit(1)
  pp.pprint(client.getScoreBoard())

transport.close()
