def main(f):
    
    if os.path.isfile(f):
        facebull = Facebull()
        facebull.input(f)
        facebull.solve()
        print facebull.total()
        print facebull.solution()
        return 0
    elif os.path.isdir(f):
        testing(f)
        return 0
    else:
        return -1

if __name__ == "__main__":
    sys.exit(main(sys.argv[1]))
